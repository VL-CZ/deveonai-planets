@model Planets.Models.PlanetProperty

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Planet Property</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <hr />

        <h4>Remove Property Values</h4>
        <ul class="list-group">
            @foreach (var value in Model.PossibleValues)
            {
                <li class="list-group-item">
                    <form asp-action="DeleteValue" asp-route-id="@value.Id">
                        <div>@value.Value</div>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </li>
            }
        </ul>

        <hr />

        <h4>Add New Property Value</h4>

        <div>
            <form asp-action="AddValue" asp-route-id="@Model.Id" method="post">
                <div class="form-group">
                    <input type="text" name="Value" class="form-control" />
                </div>
                <div class="form-group my-2">
                    <input type="submit" value="Add Value" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
