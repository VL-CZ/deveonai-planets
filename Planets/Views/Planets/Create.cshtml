@model Planets.Models.Planet

@{
    ViewData["Title"] = "Create";
}

<h1>Create Planet</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Name</label>
